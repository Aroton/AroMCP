# Environment configuration for AroMCP Workflow Server
# Copy this to .env and modify as needed

# Temporal Configuration
TEMPORAL_HOST=localhost:7233
TEMPORAL_NAMESPACE=default
TEMPORAL_TASK_QUEUE=mcp-workflows

# Workflow Server Configuration
WORKFLOW_SERVER_NAME=temporal-workflow
MAX_MESSAGE_SIZE=10000000
MCP_TIMEOUT=30

# Workflow Configuration
WORKFLOW_DEFINITIONS_PATH=./.aromcp/workflows/
MAX_PENDING_ACTIONS=50
YAML_CACHE_TTL=300
WORKER_THREADS=10

# Runtime Configuration
DEBUG_MODE=false
LOG_LEVEL=INFO

# Phase 1 Configuration (Mock Mode)
WORKFLOW_MOCK_MODE=true
MOCK_STEP_DELAY=0.1

# MCP File Root (used by other servers)
MCP_FILE_ROOT=/home/user/project

# Database Configuration (for Docker Compose)
POSTGRES_USER=temporal
POSTGRES_PASSWORD=temporal
POSTGRES_DB=temporal